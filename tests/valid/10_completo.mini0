/* Programa completo que usa multiples caracteristicas */

// Variables globales
contador: int
limite: int

fun incrementar(x: int): int
    return x + 1
end

fun es_par(n: int): bool
    result: bool
    if n = 0
        result = true
    else if n = 1
        result = false
    else
        result = es_par(n - 2)
    end
    return result
end

fun main()
    i: int
    arr: []int
    
    arr = new [100] int
    i = 0
    
    while i < 100
        arr[i] = i * 2
        i = incrementar(i)
    loop
    
    if es_par(arr[50])
        contador = 1
    end
end